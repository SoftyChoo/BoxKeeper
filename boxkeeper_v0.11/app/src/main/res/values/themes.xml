<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Boxkeeper" parent="Theme.Material3.Light.NoActionBar">
        <!--상태바 색상-->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/point_navy</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Dialog">
        <!-- 팝업 액티비티의 스타일 설정 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 기타 스타일 속성들 -->
        <!--타이틀바 없애기-->
        <item name="windowNoTitle">true</item>
    </style>


    <!-- SplashScreen -->
    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>

    </style>
</resources>